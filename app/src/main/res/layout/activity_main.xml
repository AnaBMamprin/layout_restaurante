<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEC5C5"
    android:pointerIcon="handwriting"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"
        android:scrollbarSize="4dp"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D37152"
            android:orientation="vertical"
            android:padding="5dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#160D0E"
                android:paddingLeft="5dp"
                android:pointerIcon="wait"
                android:text="Comida ByAna"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:emojiCompatEnabled="false" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Caso o valor seja zero, digite 0"
                android:textColor="#160D0E"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Se apenas uma pessoa irá pagar, digite 1"
                android:textColor="#160D0E"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D37152"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Consumo Total R$:"
                    android:textColor="#160D0E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtConsumo"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D37152"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Couvert Artístico R$:"
                    android:textColor="#160D0E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtCouvert"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:padding="2dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D37152"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Dividir conta por:"
                    android:textColor="#160D0E"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtPessoas"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="2dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnCalcular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#E3A145"
                    android:onClick="calcular"
                    android:text="Calcular conta final"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D37152"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Taxa de serviço (10%) R$:"
                    android:textColor="#160D0E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtTaxa"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D37152"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Conta total R$:"
                    android:textColor="#160D0E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtValorTotal"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="#000000" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D37152"
                    android:gravity="center|left"
                    android:paddingLeft="10dp"
                    android:text="Valor por pessoa R$:"
                    android:textColor="#160D0E"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtValorPessoa"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="261dp"
                android:background="#D37152"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/restaurante" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>